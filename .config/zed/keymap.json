// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "bindings": {
      "ctrl-h": "project_panel::ToggleFocus",
      "ctrl-l": "editor::ToggleFocus",
    },
  },
  {
    "context": "Editor && (vim_mode == normal || vim_mode == visual) && !VimWaiting && !menu",
    "bindings": {
      "shift-k": "editor::Hover",
      "space c a": "editor::ToggleCodeActions",
      "space f": "editor::Format",
      "space r n": "editor::Rename",
      "space x x": "diagnostics::Deploy",
      "space c d": "editor::Hover",
      "space s f": "file_finder::Toggle",
      "space s b": "tab_switcher::Toggle",
      "space s g": "pane::DeploySearch",
      "space p": "outline::Toggle",
      "space g d": "editor::GoToDefinitionSplit",
      "space q": "pane::CloseActiveItem",
      "g r": "editor::FindAllReferences",
      "g o": "editor::GoToTypeDefinition",
      "space t n": "workspace::ToggleLeftDock",
      "space t o": "workspace::ToggleLeftDock",
    },
  },
  {
    "context": "Editor && vim_mode == visual && !VimWaiting && !menu",
    "bindings": {
      "shift-k": "editor::MoveLineUp",
      "shift-j": "editor::MoveLineDown",
    },
  },
]
