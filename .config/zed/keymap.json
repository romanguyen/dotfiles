// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      // "shift shift": "file_finder::Toggle"
      // Ctrl-h / Ctrl-l to move focus between sidebar & editor
      "ctrl h": "project_panel::ToggleFocus",
      "ctrl l": "editor::ToggleFocus",

      // <Space> s g — search across whole project
      "space s g": "project_search::ToggleFocus",

      // <Space> t o — toggle the file tree (left sidebar)
      "space t o": "file_finder::Toggle"
    }
  },
  {
    "context": "Editor && vim_mode == normal && !VimWaiting",
    "bindings": {
      // "shift shift": "file_finder::Toggle"
      // Ctrl-h / Ctrl-l to move focus between sidebar & editor
      "ctrl h": "project_panel::ToggleFocus",
      "ctrl l": "editor::ToggleFocus",

      // <Space> s g — search across whole project
      "space s g": "project_search::ToggleFocus",

      // <Space> t o — toggle the file tree (left sidebar)
      "space t o": "file_finder::Toggle"
    }
  },
  {
    "context": "Editor && (vim_mode == normal || vim_mode == visual) && !VimWaiting && !menu",
    "bindings": {
      "space s g": "search::FocusSearch"
    }
  },
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      // "j k": "vim::NormalBefore"
    }
  }
]
